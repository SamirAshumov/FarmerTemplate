@using Template.Models
@model List<Farmer>


<!-- Hero Start -->
	<div class="container-fluid bg-primary py-5 bg-hero mb-5">
		<div class="container py-5">
			<div class="row justify-content-start">
				<div class="col-lg-8 text-center text-lg-start">
					<h1 class="display-1 text-white mb-md-4">The Team</h1>
					<a href="" class="btn btn-primary py-md-3 px-md-5 me-3">Home</a>
					<a href="" class="btn btn-secondary py-md-3 px-md-5">The Team</a>
				</div>
			</div>
		</div>
	</div>
	<!-- Hero End -->

	<!-- Team Start -->
	<div class="container-fluid py-5">
		<div class="container">
			<div class="mx-auto text-center mb-5" style="max-width: 500px;">
				<h6 class="text-primary text-uppercase">The Team</h6>
				<h1 class="display-5">We Are Professional Organic Farmers</h1>
			</div>
			<div class="row g-5">


			@foreach (var farmer in Model)
			{
						  <div class="col-lg-4 col-md-6">
							<div class="row g-0">
								<div class="col-10">
									<div class="position-relative">
										<img class="img-fluid w-100" src="~/img/@farmer.Image" alt="">
										<div class="position-absolute start-0 bottom-0 w-100 py-3 px-4" style="background: rgba(52, 173, 84, .85);">
											<h4 class="text-white">@farmer.Fullname</h4>
											<span class="text-white">@farmer.Position</span>
										</div>
									</div>
								</div>
							</div>
						</div>
			}

				</div>
			</div>
		</div>
	</div>
	<!-- Team End -->